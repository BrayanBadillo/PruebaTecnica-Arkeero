@model List<Category>
@{
    Layout = "~/Views/Shared/_LayoutCategories.cshtml";
    ViewData["Title"] = "Categories";
}

<div class="hero">
    <div class="content h-100 container-custom position-relative mt-3">
        <div class="container">
            <h1 class="text-white text-center mt-5">CATEGORIES</h1>
            <div class="row">
                <div class="col align-items-end text-end my-4 " >
                    <a class="btn btn-outline-success navbar-toggler justify-content-end" asp-area="" asp-controller="Category" asp-action="Index">
                        <i class="bi bi-patch-plus"> Add Category</i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">

            <table class="table-responsive mt-3 table-bordered" style="overflow-x auto;">
                <thead class="thead-table text-white text-center">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if ( Model.Count == 0 )
                    {
                        <tr>
                            <td colspan="6" class="text-center">No Categories found!</td>
                        </tr>

                    }
                    else
                    {
                        @foreach ( var item in Model )
                        {
                            <tr>

                                <td>@item.Id</td>
                                <td>@item.Name</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

